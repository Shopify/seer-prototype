<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @expert %>

    <%= link_to 'Edit this expert', edit_expert_path(@expert), class: "btn btn-primary" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this expert', expert_path(@expert), method: :delete, class: "btn btn-warning" %>
    </div>
    <%= link_to 'Back to experts', experts_path, class: "btn" %>
  </div>
</div>
