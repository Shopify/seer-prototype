<table class="table table-compact table-zebra w-full">
  <caption><%= @project.estimates.count %> <%= "estimate".pluralize %></caption>
  <thead>
    <tr>
      <th>Expert</th>
      <th>Min magn.</th>
      <th>Likely magn.</th>
      <th>Max magn.</th>
      <th>Min freq.</th>
      <th>Likely freq.</th>
      <th>Max freq.</th>
    </tr>
  </thead>
  <tbody>
    <% @project.estimates.each do |estimate| %>
      <tr>
        <td><%= estimate.expert.name %></td>
        <td class="text-center"><%= estimate.min_magnitude %></td>
        <td class="text-center"><%= estimate.likely_magnitude %></td>
        <td class="text-center"><%= estimate.max_magnitude %></td>
        <td class="text-center"><%= estimate.min_frequency %></td>
        <td class="text-center"><%= estimate.likely_frequency %></td>
        <td class="text-center"><%= estimate.max_frequency %></td>
      </tr>
    <% end %>
  </tbody>
</table>